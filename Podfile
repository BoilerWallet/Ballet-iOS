# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Ballet' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Ballet

  # Material
  pod 'Material', '~> 2.12'

  # Cartography
  pod 'Cartography', '~> 3.0'

  # Networking
  pod 'Alamofire', '~> 4.6'

  # Encryption  
  pod 'CryptoSwift', '~> 0.8'

  pod 'EllipticCurveKeyPair', '2.0-beta1'

  target 'BalletTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'Quick', '~> 1.2'
    pod 'Nimble', '~> 7.0'
  end

  target 'BalletUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
